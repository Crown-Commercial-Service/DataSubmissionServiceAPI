%header.govuk-header{"data-module" => "header", :role => "banner"}
  .govuk-header__container.govuk-width-container
    .govuk-header__logo
      %a.govuk-header__link.govuk-header__link--homepage{:href => "https://www.crowncommercial.gov.uk/"}
        %span.govuk-header__logotype-text.govuk-visually-hidden
          Crown
          %br
          Commercial
          %br
          Service
    .govuk-header__content
      %a.govuk-header__link.govuk-header__link--service-name{:href => admin_root_path}
        RMI Admin
      %button.govuk-header__menu-button.js-header-toggle{"aria-controls" => "navigation", "aria-label" => "Show or hide Top Level Navigation", :role => "button"} Menu
      - if !no_navigation
        %nav
          %ul#navigation.govuk-header__navigation{"aria-label" => "Top Level Navigation"}
            - if current_user
              %li.govuk-header__navigation-item
                = link_to 'Users', admin_users_path, {:class=>"govuk-header__link"}
              %li.govuk-header__navigation-item
                = link_to 'Suppliers', admin_suppliers_path, {:class=>"govuk-header__link"}
              %li.govuk-header__navigation-item
                = link_to 'Frameworks', admin_frameworks_path, {:class=>"govuk-header__link"}
              %li.govuk-header__navigation-item
                = link_to 'URN Lists', admin_urn_lists_path, {:class=>"govuk-header__link"}
              %li.govuk-header__navigation-item
                = link_to 'Notify downloads', admin_notify_downloads_path, {:class=>"govuk-header__link"}
              %li.govuk-header__navigation-item
                = link_to 'Sign out', admin_sign_out_path, {:class=>"govuk-header__link"}
