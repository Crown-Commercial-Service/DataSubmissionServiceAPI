class Framework
  module Definition
    class <%= sanitised_framework_short_name %> < Base
      framework_short_name '<%= framework_short_name %>'
      framework_name       '<%= framework_name %>'

      class Invoice < Sheet
        <%- invoice_fields.each do |field| -%>
        field '<%= field['DisplayName'] %>', <%= activemodel_data_type field['SystemDataType'] %><%= exports_to(field) %>
        <%- end -%>
      end
      <%- if order_fields.any? -%>

      class Order < Sheet
        <%- order_fields.each do |field| -%>
        field '<%= field['DisplayName'] %>', <%= activemodel_data_type field['SystemDataType'] %><%= exports_to(field) %>
        <%- end -%>
      end
      <%- end -%>
    end
  end
end
